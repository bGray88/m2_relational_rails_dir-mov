<form action="/directors/<%= @director.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h2><p>Edit <%= "#{@director.name}" %></p></h2>
  <label><h3>
    Name: <input type='text' name='director[name]' value="<%= @director.name %>"/><br>
    Hometown: <input type='text' name='director[hometown]' value="<%= @director.hometown %>"/><br>
    Living: 
      <input type="radio" id="alive_true" name="director[alive]" value="<%= @director.alive == true %>"/>
      <label for="alive_true">true<label>
      <input type="radio" id="alive_false" name="director[alive]" value="<%= @director.alive == false %>"/>
      <label for="alive_false">false<label><br>
    Age: <input type='text' name='director[age]' value="<%= @director.age %>"/>
  </h3></label><br><br>
  <input type='submit' value='Submit Changes'/>
</form>
