<form action="/movies/<%= @movie.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h2><p>Edit <%= "#{@movie.name}" %>: <%= "#{@movie.version}" %></p></h2>
  <label><h3>
    Name: <input type='text' name='movie[name]' value="<%= @movie.name %>"/><br>
    Version: <input type='text' name='movie[version]' value="<%= @movie.version %>"/><br>
    Rating: <input type='text' name='movie[rating]' maxlength='3' value="<%= @movie.rating %>"/><br>
    Censored: 
    <input type="radio" id="censored_true" name="movie[censored]" value="<%= @movie.censored == true %>"/>
    <label for="censored_true">true<label>
    <input type="radio" id="censored_false" name="movie[censored]" value="<%= @movie.censored == false %>"/>
    <label for="censored_false">false<label><br>
    Length in Minutes: <input type='number' min="1" name='movie[length_in_mins]' value="<%= @movie.length_in_mins %>"/><br>
    Director: <input type='text' name='movie[director_id]' value="<%= @movie.director.name %>"/>
  </h3></label><br><br>
  <input type='submit' value='Submit Changes'/>
</form>
