<%= form_with url:"/movies?director_id=/#{@director.id}", method: :post, local: true do |f| %>
  <%= f.label "Enter a new movie:" %><br>
  <%= f.label :name, "Name: " %><%= f.text_field :name %><br>
  <%= f.label :version, "Version: " %><%= f.text_field :version %><br>
  <%= f.label :rating, "Rating: " %><%= f.text_field :rating %><br>
  <%= f.label :censored, "Censored: " %>
  <%= f.radio_button :censored, "true" %><%= f.label :censored_true, "true" %>
  <%= f.radio_button :censored, "false" %><%= f.label :censored_false, "false" %><br>
  <%= f.label :length_in_mins, "Length: " %><%= f.number_field :length_in_mins %><br>
  <%= f.hidden_field :director, value: @director.name %><br> 
  <%= f.submit 'Create Movie' %>
<% end %>
