<h1><%= @director.name %> Movies</h1>

<form action="/movies/<%= "@director.name" %> method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  Movies Longer Than: <input type='number' min="1" name='threshold'/><br>
  <input type='submit' value='Submit Changes'/>
</form>
<% @movies.each do |movie| %>
  <br><h3>
    Name: <%= link_to "#{movie.name}", "/movies/#{movie.id}" %>
    <%= link_to "Edit", "/movies/#{movie.id}/edit"%>
    <%= link_to "Delete", "/movies/#{movie.id}", method: :delete %>
  </h3><br><br>
  <h3>Version:  <%= movie.version %></h3><br>
  <h3>Rating:   <%= movie.rating %></h3><br>
  <h3>Censored: <%= movie.censored %></h3><br>
  <h3>Length:   <%= movie.length_in_mins %> minutes</h3><br>
<% end %>

<br><br><h3><%= link_to "Sort List", "/directors/#{@director.id}/movies?sort=true"%></h2>